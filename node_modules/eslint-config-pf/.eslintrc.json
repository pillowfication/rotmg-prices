{
  "extends": "eslint:recommended",
  "rules": {
    "no-cond-assign": [0],
    "no-inner-declarations": [0],
    "no-regex-spaces": [0],
    "no-unexpected-multiline": [0],
    "use-isnan": [0],
    "valid-typeof": [0],

    "no-caller": [2],
    "no-case-declarations": [0],
    "no-extend-native": [2],
    "no-extra-bind": [2],
    "no-extra-label": [2],
    "no-fallthrough": [0],
    "no-global-assign": [2],
    "no-iterator": [2],
    "no-proto": [2],

    "no-path-concat": [2],

    "comma-dangle": [2],
    "eol-last": [2],
    "jsx-quotes": [2, "prefer-double"],
    "linebreak-style": [2],
    "quotes": [2, "single"],
    "semi": [2]
  }
}
